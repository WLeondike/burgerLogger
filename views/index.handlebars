<div class="hero-image">
  <div class="hero-text">
    <h1><strong>Eat-Da-Burger!</strong></h1>
  </div>
</div>

<div class="container">
  <br>
  <div class="row">

    <div class="text-center col-4 border">
      <h2>Add a Burger</h2>
      <hr>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Name of the burger:</label>
          <br>
          <input type="text" id="burger" name="name">
        </div>
        <button class="btn btn-secondary btn-sm" type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-4 border">
      <h2 class="text-center">Burgers Created!</h2>
      <hr>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </div>

    <div class="col-4 border">
      <h2 class="text-center">Burgers Devoured!</h2>
      <hr>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>